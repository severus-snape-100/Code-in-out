#include<iostream>
using namespace std;
int main()
{
    long long int n,k;
    cin>>n>>k;
    long long int d,count;
    if(n%2==0)
    {
        if(k<=n/2)
        {
            cout<<(2*k)-1;
        }
        else
        {
            cout<<2*(k-(n/2));
        }
    }
    else
    {
        if(k<=((n/2)+1))
        {
          cout<<(2*k)-1;  
        }
        else
        {
            count=(n/2)+1;
            cout<<2*(k-count);
        }
    }
}
